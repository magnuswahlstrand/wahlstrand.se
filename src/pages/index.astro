---
import Layout from '../layouts/Layout.astro';
import Thumbnail from '../components/Thumbnail.astro';
import site from "../data/site.json";
const {images} = site;
const years = Object.keys(images);
years.reverse()
---


<Layout title="Welcome to wahlstrand.se">
    <main>
<!--        // WIP - Clean up-->
<!--        <div class="w-screen h-screen fixed z-10 fixed hidden">-->
<!--            <div class="bg-black opacity-40 absolute inset-0 z-20">-->
<!--            </div>-->
<!--            <img class="z-20" src="https://wahlstrand.se/_images/_Akvareller/_2004/20040003.jpg"/>-->
<!--        </div>-->
        <div class="grid lg:grid-cols-2 2xl:grid-cols-5">
            <div class="
            2xl:col-span-2
            px-8 py-12 lg:px-12 lg:py-24
         max-w-md sm:max-w-xl lg:max-w-full
         mx-auto xl:mr-0">
                <div class="xl:max-w-xl">
                    <h1 class="mt-6 sm:mt-8 text-5xl sm:text-7xl lg:text-6xl font-bold text-gray-700">
                        wahlstrand
                    </h1>
                    <img class="lg:hidden mt-6 sm:mt-8 rounded-lg shadow-xl sm:h-64 sm:w-full object-cover object-center"
                         src="assets/img.png" alt="Watercolor ship">
                    <h3 class="mt-4 text-xl sm:text-2xl font-thin text-gray-700">Adventures in
                        <span class="text-yellow-700 font-medium">watercolors</span>
                    </h3>
                    <p class="mt-6 sm:mt-8 text-gray-600 sm:text-xl font-thin">
                        Welcome! My name is Hans-Erik Wahlstrand. I am a mechanical engineer professionally (now retired) and amateur painter in my spare time.
                        I hope you enjoy this site.
                    </p>
                    <div class="mt-3 text-md font-medium">
                        / HANS-ERIK
                    </div>
                </div>
            </div>
            <div class="hidden lg:block relative 2xl:col-span-3">
                <img class="absolute inset-0 w-full max-w-6xl h-full object-cover object-center"
                     src="assets/img.png"
                     alt="Watercolor ship">
            </div>
        </div>
        <div class="flex flex-col items-center lg:pt-8 xl:pt-12">
            <h4 class="mt-4 text-2xl sm:text-3xl lg:text-3xl font-bold text-gray-700 tracking-wide">
                prior art
            </h4>
            <svg xmlns="http://www.w3.org/2000/svg" class="sm:hidden h-12 w-12 text-yellow-700 opacity-60 pt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 17l-4 4m0 0l-4-4m4 4V3" />
<!--                <path stroke-linecap="round" stroke-linejoin="round" d="M19 13l-7 7-7-7m14-8l-7 7-7-7" />-->
            </svg>

                <!--                Clean up -->
                <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4">
                    {years.map((year) => {
                    return (<>
                        <div class="text-4xl m-auto">{year}</div>
                        { images[year].map(img => <Thumbnail img={img} />)}</>
                    );
                    })}
                </div>
        </div>
    </main>
</Layout>
